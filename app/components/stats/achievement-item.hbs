<li class="flex flex-row gap-2 items-center">
  <img
    src={{@achievement.icon}}
    alt="Achievement Icon"
    {{! width="64" }}
    class="border-2 border-accent-dark rounded-md"
  />
  <div class="flex flex-col w-full justify-between">
    <div class="flex flex-col">
      <h1
        class="text-2xl text-primary-dark leading-none"
      >{{@achievement.name}}</h1>
      <p
        data-test-description
        class="text-secondary-dark ps-0.5"
      >{{@achievement.description}}</p></div>
    <div class="flex flex-row justify-between ps-0.5">
      <p data-test-date class="text-secondary-dark text-sm">Achieved on:
        <span class="text-accent-dark">{{@achievement.unlocktime}}</span>
      </p>
      {{! <p class="text-secondary-dark">Rarity:
        <span class="text-accent-dark">73.6%</span>
      </p> }}
    </div>
  </div>
</li>