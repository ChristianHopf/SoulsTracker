<div data-test-find-user class="flex items-center lg:items-start px-2 gap-2">
  <label class="text-2xl w-[16rem] text-primary-dark font-semibold">
    <Input
      @value={{this.steamid}}
      placeholder="SteamID"
      class="text-md text-header-dark bg-primary-dark rounded-md focus:outline-none border border-header-dark focus:border-accent-dark focus:ring-1 focus:ring-header-dark w-full px-2 py-1"
    />
  </label>
  <TipSteamid />
  {{#if this.steamid}}
    <LinkTo @route="user" @model={{this.steamid}}>
      <button
        type="button"
        class="text-sm bg-header-dark text-primary-dark border border-header-dark hover:text-accent-dark hover:border-accent-dark transition-colors duration-200 rounded-md w-full max-w-24 px-2 py-1 md:px-4 md:py-2"
      >Find User</button>
    </LinkTo>
  {{else}}
    <button
      type="button"
      disabled
      class="text-md bg-secondary-dark text-header-dark border border-header-dark rounded-md w-full max-w-24 px-2 py-1 md:px-4 md:py-2"
    >
      Find User
    </button>
  {{/if}}
</div>