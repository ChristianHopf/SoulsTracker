<div data-test-game-select class="flex items-center lg:items-start px-2 gap-2">
  <label class="text-2xl w-[16rem] text-primary-dark font-semibold">
    <select
      name="ownedGames"
      id="ownedGames"
      class="text-header-dark bg-primary-dark rounded-md focus:outline-none border border-header-dark focus:border-accent-dark focus:ring-1 focus:ring-header-dark w-full px-2 py-1"
      {{on "change" this.handleChangeGame}}
    >
      <option value="ignore">Select game</option>
      {{!use #each to render an <option> for each game}}
      {{#if this.user.ownedGames}}
        {{#each this.user.ownedGames as |game|}}
          <option value={{game.id}}>
            {{game.name}}
          </option>
        {{/each}}
      {{/if}}
    </select>
  </label>
  <TipGames />
  <button
    type="button"
    disabled
    class="text-md bg-secondary-dark text-header-dark border border-header-dark rounded-md w-full max-w-24 px-2 py-1 md:px-4 md:py-2"
  >
    Get Stats
  </button>
</div>
